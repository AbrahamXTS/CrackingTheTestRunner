extends ../layout/index

block content
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Test
      span.font-normal Runner
    h2.text-center.text-2xl.font-bold= title

    .mt-8.mx-auto.max-w-md
      p(class=`${error ? "bg-red-500" : "bg-green-500"} py-2 px-5 rounded-lg w-full`)
      p.text-2xl.font-bold.text-center.my-10= header
      p.text-xl.text-center.my-10.leading-10= message
      if success
        a.text-slate-600.font-bold.text-center.text-sm.mt-10.block.uppercase(
          href="/"
        ) Ir al inicio
